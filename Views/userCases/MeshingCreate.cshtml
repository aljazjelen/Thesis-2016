@model ThesisApplication.Models.userCase

@{
    ViewData["Title"] = "CreateMesh";
    Layout = "_Layout";
}

<!--
    View for creating a a group of mesh parameters    
-->
<h2>Submit meshing parameters</h2>
<h5>Second stage of Digital wind tunnel is meshing an uploaded geometry</h5>
<h5>Mesh is generated by OpenFOAM utility called <a href="http://cfd.direct/openfoam/user-guide/snappyhexmesh/">snappyHexMesh</a> In this particular stage please input desired p</h5>

<form asp-action="CreateMesh">
    <div class="form-horizontal">
        <h4>userCase</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        
        <div class="form-group">
            <label asp-for="mesh_expRatio" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="mesh_expRatio" class="form-control" />
                <span asp-validation-for="mesh_expRatio" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="mesh_finLayerThickness" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="mesh_finLayerThickness" class="form-control" />
                <span asp-validation-for="mesh_finLayerThickness" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="mesh_minThickness" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="mesh_minThickness" class="form-control" />
                <span asp-validation-for="mesh_minThickness" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="mesh_numLayers" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="mesh_numLayers" class="form-control" />
                <span asp-validation-for="mesh_numLayers" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="mesh_refRegDist1" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="mesh_refRegDist1" class="form-control" />
                <span asp-validation-for="mesh_refRegDist1" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="mesh_refRegDist2" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="mesh_refRegDist2" class="form-control" />
                <span asp-validation-for="mesh_refRegDist2" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="mesh_refRegDist3" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="mesh_refRegDist3" class="form-control" />
                <span asp-validation-for="mesh_refRegDist3" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="mesh_refRegLvl1" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="mesh_refRegLvl1" class="form-control" />
                <span asp-validation-for="mesh_refRegLvl1" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="mesh_refRegLvl2" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="mesh_refRegLvl2" class="form-control" />
                <span asp-validation-for="mesh_refRegLvl2" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="mesh_refRegLvl3" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="mesh_refRegLvl3" class="form-control" />
                <span asp-validation-for="mesh_refRegLvl3" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="mesh_refSurfLvlMax" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="mesh_refSurfLvlMax" class="form-control" />
