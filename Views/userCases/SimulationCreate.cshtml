                    </div>
                </div>
            </div>
            <!-- Plane 1 -->
            <div class="col-md-3" id="cut_1st">
                <!-- Point 1-->
                <div class="form-group">
                    <label asp-for="visualization_point1x" class="col-md-6 control-label" style="text-align:right;"></label>
