                        <input asp-for="visualization_point2y" class="form-control" />
                        <span asp-validation-for="visualization_point2y" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="visualization_point2z" class="col-md-6 control-label" style="text-align:right;"></label>
                    <div class="col-md-6">
                        <input asp-for="visualization_point2z" class="form-control" />
                        <span asp-validation-for="visualization_point2z" class="text-danger" />
                    </div>
                </div>
                <!-- Normal 2-->
                <div class="form-group">
                    <label asp-for="visualization_normal2x" class="col-md-6 control-label" style="text-align:right;"></label>
                    <div class="col-md-6">
                        <input asp-for="visualization_normal2x" class="form-control" />
