                <div class="form-group">
                    <label asp-for="visualization_probe3y" class="col-md-6 control-label" style="text-align:right;"></label>
                    <div class="col-md-6">
                        <input asp-for="visualization_probe3y" class="form-control" />
                        <span asp-validation-for="visualization_probe3y" class="text-danger" />
                    </div>
                </div>
