                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="visualization_probe1z" class="col-md-6 control-label" style="text-align:right;"></label>
                    <div class="col-md-6">
                        <input asp-for="visualization_probe1z" class="form-control" />
                        <span asp-validation-for="visualization_probe1z" class="text-danger" />
                    </div>
                </div>
            </div>
