                    <div class="col-md-6">
                        <input asp-for="visualization_numProbes" class="form-control" id="numProbes" />
                        <span asp-validation-for="visualization_numProbes" class="text-danger" />
                        <p class="has-error" id="visualization_probes_error"></p>
                    </div>
                </div>
            </div>
            <!-- Probe 1 -->
            <div class="col-md-3" id="probe_1st">
                <div class="form-group">
                    <label asp-for="visualization_probe1x" class="col-md-6 control-label" style="text-align:right;"></label>
                    <div class="col-md-6">
                        <input asp-for="visualization_probe1x" class="form-control" />
                        <span asp-validation-for="visualization_probe1x" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
