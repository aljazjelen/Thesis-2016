@model ThesisApplication.Models.userCase

@{
    ViewData["Title"] = "SimulationCreate";
    Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/customLayoutStyle.css" />

<br /><br /><br /><br /><br /><br />
<h2>SimulationCreate</h2>

<form asp-action="CreateSimulation">
    <div class="form-horizontal">
        <h4>Chosen case:</h4>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.caseName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.caseName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.inputFilename)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.inputFilename)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.uploadDate)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.uploadDate)
            </dd>
        </dl>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @Html.Partial("/Views/Shared/_partialMeshingHiddenFields.cshtml")
        @Html.Partial("/Views/Shared/_partialGeneralHiddenFields.cshtml")
        
        <hr />
        <h4>Fluid details and operating conditions</h4>

        <div class="row">
            <div class="col-md-4">
                <br />
                All physical properties have standardized measure by the <a href="https://en.wikipedia.org/wiki/International_System_of_Units">SI Units</a>.
                <br /><br />
                Flow direction is normalized after user input.
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="visualization_operatingPressure" class="col-md-6 control-label" style="text-align:right;"></label>
                    <div class="col-md-6">
                        <input asp-for="visualization_operatingPressure" class="form-control" />
                        <span asp-validation-for="visualization_operatingPressure" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="visualization_operatingtemperature" class="col-md-6 control-label" style="text-align:right;"></label>
                    <div class="col-md-6">
                        <input asp-for="visualization_operatingtemperature" class="form-control" />
                        <span asp-validation-for="visualization_operatingtemperature" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="visualization_flowSpeed" class="col-md-6 control-label" style="text-align:right;"></label>
                    <div class="col-md-6">
                        <input asp-for="visualization_flowSpeed" class="form-control" />
                        <span asp-validation-for="visualization_flowSpeed" class="text-danger" />
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="visualization_flowDirectionX" class="col-md-6 control-label" style="text-align:right;"></label>
                    <div class="col-md-6">
                        <input asp-for="visualization_flowDirectionX" class="form-control" />
                        <span asp-validation-for="visualization_flowDirectionX" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="visualization_flowDirectionY" class="col-md-6 control-label" style="text-align:right;"></label>
                    <div class="col-md-6">
                        <input asp-for="visualization_flowDirectionY" class="form-control" />
                        <span asp-validation-for="visualization_flowDirectionY" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="visualization_flowDirectionZ" class="col-md-6 control-label" style="text-align:right;"></label>
                    <div class="col-md-6">
                        <input asp-for="visualization_flowDirectionZ" class="form-control" />
                        <span asp-validation-for="visualization_flowDirectionZ" class="text-danger" />
                    </div>
                </div>
            </div>
        </div>

        <hr />
        <h4>Sampling details</h4>
